[user]
	name = Greg Burek
	email = greg.burek@gmail.com
[core]
	quotepath = false
	editor = /usr/local/bin/vim
	excludesfile = ~/.gitignore_global
[format]
	pretty = oneline
[color]
	interactive = auto
	ui = auto
    branch = auto
    diff = auto
    status = auto
[diff]
  compactionHeuristic = true
  tool=code --wait --diff $LOCAL $REMOTE
[alias]
	unstage = reset HEAD
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --find-renames --ignore-all-space
	update = !git fetch origin && git rebase origin/master
    status = status -sb
	ca = commit --amend --reuse-message=HEAD
	lgb = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date=relative --branches
	up = pull --rebase --autostash upstream master
	oup = pull --rebase --autostash origin master
[push]
	default = current
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[colors]
	ui = true
[credential "https://git-codecommit.us-east-1.amazonaws.com"]
	UseHttpPath = true
[commit]
	verbose = true
[credential]
	helper = !git-credential-codecommit-osx $@
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
