[user]
	name = Greg Burek
	email = greg.burek@gmail.com
[core]
	quotepath = false
	editor = /usr/local/bin/vim
[format]
	pretty = oneline
[color]
	interactive = auto
	ui = auto
    branch = auto
    diff = auto
    status = auto
[diff]
  compactionHeuristic = true
[alias]
	unstage = reset HEAD
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --find-renames --ignore-all-space
	update = !git fetch origin && git rebase origin/master
    status = status -sb
	ca = commit --amend --reuse-message=HEAD
	lgb = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date=relative --branches
#[push]
#	default = simple
[push]
	default = simple
[credential]
	helper = osxkeychain
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[colors]
	ui = true
